{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "dist/*"],
      "@constants/*": ["src/constants/*", "dist/constants/*"],
      "@controllers/*": ["src/controllers/*", "dist/controllers/*"],
      "@services/*": ["src/services/*", "dist/services/*"],
      "@routes/*": ["src/routes/*", "dist/routes/*"],
      "@middlewares/*": ["src/middlewares/*", "dist/middlewares/*"],
      "@libs/*": ["src/libs/*", "dist/libs/*"],
      "@utils/*": ["src/utils/*", "dist/utils/*"],
      "@generated/*": ["src/generated/*", "dist/generated/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
