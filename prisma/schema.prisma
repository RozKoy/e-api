generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Role {
  id              String           @id @default(uuid())
  name            String           @unique
  description     String?
  users           User[]
  rolePermissions RolePermission[]

  proposalAssignments ProposalAssignment[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Permission {
  id          String  @id @default(uuid())
  name        String  @unique
  group       String
  description String?

  rolePermissions RolePermission[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model RolePermission {
  id           String @id @default(uuid())
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model User {
  id           String    @id @default(uuid())
  roleId       String?
  positionId   String?
  email        String    @unique
  password     String
  lastActiveAt DateTime?

  role                    Role?                    @relation(fields: [roleId], references: [id])
  position                Position?                @relation(fields: [positionId], references: [id], onDelete: SetNull)
  profile                 UserProfile?
  accesses                UserAccess[]
  proposals               Proposal[]
  proposalVotes           ProposalVote[]
  proposalStatuses        ProposalStatus[]
  proposalDiscussions     ProposalDiscussion[]
  proposalDiscussionVotes ProposalDiscussionVote[]
  notifications           Notification[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  chatsAsUserA ChatRoom[]    @relation("UserAChats")
  chatsAsUserB ChatRoom[]    @relation("UserBChats")
  sentMessages ChatMessage[] @relation("ChatMessage_senderIdToUser")
}

model Position {
  id           String           @id @default(uuid())
  name         String
  category     PositionCategory
  level        PosisionLevel
  commissionId String?

  users      User[]
  commission Commission? @relation(fields: [commissionId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

enum PositionCategory {
  pimpinan
  komisi
}

enum PosisionLevel {
  ketua
  wakil
  sekretaris
  anggota
}

model Commission {
  id   String @id @default(uuid())
  name String

  positions Position[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model UserProfile {
  id          String  @id @default(uuid())
  userId      String  @unique
  name        String
  age         Int?
  gender      Gender?
  phoneNumber String?
  imageName   String?
  imagePath   String?
  imageUrl    String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

enum Gender {
  l
  p
}

model Area {
  id   String @id @default(uuid())
  name String @unique
  code Int    @default(0)

  userAccesses UserAccess[]
  proposals    Proposal[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Fraction {
  id        String  @id @default(uuid())
  name      String  @unique
  imageName String?
  imagePath String?
  imageUrl  String?

  userAccesses UserAccess[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model UserAccess {
  id         String  @id @default(uuid())
  userId     String  @unique
  areaId     String
  fractionId String
  public     Boolean

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  area     Area     @relation(fields: [areaId], references: [id], onDelete: Cascade)
  fraction Fraction @relation(fields: [fractionId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Category {
  id   String @id @default(uuid())
  name String @unique

  proposals Proposal[]
  news      News[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Proposal {
  id             String             @id @default(uuid())
  userId         String
  areaId         String
  categoryId     String?
  status         ProposalStatusEnum
  title          String
  description    String
  customCategory String?
  fileName       String?
  filePath       String?
  fileUrl        String?

  user     User      @relation(fields: [userId], references: [id])
  area     Area      @relation(fields: [areaId], references: [id])
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  votes         ProposalVote[]
  statuses      ProposalStatus[]
  assignments   ProposalAssignment[]
  discussions   ProposalDiscussion[]
  notifications Notification[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

enum ProposalStatusEnum {
  baru
  diproses
  selesai
}

model ProposalVote {
  id         String  @id @default(uuid())
  userId     String
  proposalId String
  agree      Boolean

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  proposal Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model ProposalStatus {
  id         String             @id @default(uuid())
  userId     String
  proposalId String
  status     ProposalStatusEnum
  note       String?

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  proposal Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model ProposalAssignment {
  id         String @id @default(uuid())
  proposalId String
  roleId     String

  proposal Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  role     Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model ProposalDiscussion {
  id         String @id @default(uuid())
  proposalId String
  userId     String
  message    String

  proposal Proposal                 @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  user     User                     @relation(fields: [userId], references: [id], onDelete: Cascade)
  votes    ProposalDiscussionVote[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model ProposalDiscussionVote {
  id                   String  @id @default(uuid())
  proposalDiscussionId String
  userId               String
  agree                Boolean

  discussion ProposalDiscussion @relation(fields: [proposalDiscussionId], references: [id], onDelete: Cascade)
  user       User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Notification {
  id         String             @id @default(uuid())
  userId     String
  proposalId String
  status     ProposalStatusEnum

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  proposal Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model News {
  id        String   @id @default(uuid())
  title     String
  content   String   @db.Text
  date      DateTime
  imageName String?
  imagePath String?
  imageUrl  String?

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model ChatRoom {
  id      String @id @default(uuid())
  userAId String
  userBId String

  userA    User          @relation("UserAChats", fields: [userAId], references: [id], onDelete: Cascade)
  userB    User          @relation("UserBChats", fields: [userBId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model ChatMessage {
  id       String @id @default(uuid())
  roomId   String
  senderId String
  message  String

  sender User     @relation("ChatMessage_senderIdToUser", fields: [senderId], references: [id], onDelete: Cascade)
  room   ChatRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
